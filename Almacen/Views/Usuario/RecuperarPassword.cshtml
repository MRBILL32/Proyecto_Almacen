@model Dominio.Core.Entities.RecuperarPassword

<h2>Recuperar contraseña</h2>

@if (TempData["Exito"] != null)
{
    <div class="alert alert-success">@TempData["Exito"]</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@using (Html.BeginForm("RecuperarPassword", "Usuario", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Correo)
        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Correo)
    </div>
    <button type="submit" class="btn btn-primary">Enviar enlace de recuperación</button>
    @Html.ActionLink("Regresar", "IniciarSesion", "Usuario", null, new { @class = "btn btn-warning" })
}