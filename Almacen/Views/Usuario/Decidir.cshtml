@model Dominio.Core.Entities.tb_Usuario

@{
    ViewBag.Title = "Decidir sobre usuario";
}

<h2>Decidir sobre el registro de @Model.nombres @Model.apellidos como nuevo(a) administrador(a)</h2>

<table class="table bg-white">
    <tr><th>Nombres</th><td>@Model.nombres</td></tr>
    <tr><th>Apellidos</th><td>@Model.apellidos</td></tr>
    <tr><th>DNI</th><td>@Model.dni</td></tr>
    <tr><th>Correo</th><td>@Model.correo</td></tr>
    <tr><th>Estado actual</th><td>@Model.estado</td></tr>
</table>

@using (Html.BeginForm("Decidir", "Usuario", FormMethod.Post))
{
    @Html.HiddenFor(m => m.IdUsuario)
    <button type="submit" name="decision" value="Aprobado" class="btn btn-success">Aprobar</button>
    <button type="submit" name="decision" value="Rechazado" class="btn btn-danger">Rechazar</button>
}