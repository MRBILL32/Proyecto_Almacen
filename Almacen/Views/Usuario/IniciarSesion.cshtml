@model Dominio.Core.Entities.IniciarSesion

@{
    ViewBag.Title = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

@if (TempData["Exito"] != null)
{
    <div class="alert alert-success">
        @TempData["Exito"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <br />
    <div>
        @Html.LabelFor(m => m.login)
        @Html.TextBoxFor(m => m.login, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.login, "", new { @class = "text-danger" })
    </div>
    <br />
    <div>
        @Html.LabelFor(m => m.password)
        @Html.PasswordFor(m => m.password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
    </div>
    <br />
    <p>
        <a href="@Url.Action("RecuperarPassword", "Usuario")">¿Has olvidado tu contraseña?</a>
    </p>

    <button type="submit" class="btn btn-success">Iniciar Sesion</button>
}