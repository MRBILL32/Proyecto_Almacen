<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FASTRABBIT Importaciones/Exportaciones</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-nav > li {
            margin-right: 12px;
        }
    </style>
</head>
<body style="background-color: antiquewhite">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("FireRabbit", "IniciarSesion", "Usuario", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Inicio", "IniciarSesion", "Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (Session["idRol"] != null)
                    {
                        if ((int)Session["idRol"] == 1) // Admin
                        {
                            <li>@Html.ActionLink("Productos", "ProductosAdmin", "Producto", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else if ((int)Session["idRol"] == 2) // Usuario normal
                        {
                <li>@Html.ActionLink("Productos", "ProductosUsuario", "Producto", new { numeropagina = 1, area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (Session["usuario"] != null)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white">
                                @("Hola, " + ((Dominio.Core.Entities.tb_Usuario)Session["usuario"]).nombres)
                            </span>
                            <br />
                        </li>
                        <li>@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Usuario", new { area = "" }, new { @class = "navbar-brand" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Registrarse", "Registrar", "Usuario", new { area = "" }, new { @class = "navbar-brand" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FASTRABBIT Importaciones/Exportaciones</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>